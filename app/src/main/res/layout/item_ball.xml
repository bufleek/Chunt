<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="BindingBalls">
        <variable
            name="ball"
            type="com.sports.crichunt.data.models.Ball" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="12dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_col_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.1"
                android:text="@{ball.ball}"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/tv_col_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="Batsman"
                android:text="@{ball.batsman.fullname}" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="Bowler"
                android:text="@{ball.bowler.fullname}"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="1 Run"
                android:text="@{ball.score.name}"/>

            <TextView
                android:id="@+id/runs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="R:1"
                runs="@{ball.score.runs}"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/bye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="B:1"
                android:layout_marginStart="10dp"
                bye="@{ball.score.bye}"/>

            <TextView
                android:id="@+id/legbye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="LB:1"
                android:layout_marginStart="10dp"
                legbye="@{ball.score.leg_bye}"/>

            <TextView
                android:id="@+id/noball"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="NB:1"
                noball="@{ball.score.noball}"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/noballruns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="NBR:1"
                noballruns="@{ball.score.noball_runs}"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>
</layout>